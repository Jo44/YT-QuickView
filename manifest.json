{
    "manifest_version": 3,
    "name": "__MSG_appName__",
    "version": "1.0",
    "description": "__MSG_appDescription__",
    "default_locale": "en",
    "icons": {
        "16": "icons/icon48.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon48.png",
            "32": "icons/icon48.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "__MSG_appName__",
        "default_popup": "html/config.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "js/content.js"
            ],
            "css": [
                "css/content.css"
            ],
            "run_at": "document_end"
        }
    ]
}